# ===========================================
# ğŸ§  DataPilot AI - Editor Configuration
# ===========================================
# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# ===========================================
# ğŸŒ All Files
# ===========================================
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# ===========================================
# ğŸ Python Files
# ===========================================
[*.py]
indent_size = 4
max_line_length = 120

# ===========================================
# ğŸŒ Web Files (HTML, CSS, JS)
# ===========================================
[*.{html,css,js,jsx,ts,tsx}]
indent_size = 2

# ===========================================
# ğŸ“„ JSON & YAML Files
# ===========================================
[*.{json,yml,yaml}]
indent_size = 2

# ===========================================
# ğŸ“ Markdown Files
# ===========================================
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# ===========================================
# ğŸ³ Docker Files
# ===========================================
[Dockerfile]
indent_size = 4

# ===========================================
# âš™ï¸ Config Files
# ===========================================
[*.{toml,ini,cfg}]
indent_size = 4

# ===========================================
# ğŸ“œ Shell Scripts
# ===========================================
[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

# ===========================================
# ğŸ“‹ Makefiles
# ===========================================
[Makefile]
indent_style = tab

# ===========================================
# ğŸ“¦ Requirements Files
# ===========================================
[requirements*.txt]
indent_size = 4
